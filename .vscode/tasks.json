{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-windows",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "New-Item -ItemType Directory -Force -Path build; Set-Location build; cmake .. -G \\\"MinGW Makefiles\\\"; make"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "options": {
        "shell": {
          "executable": "powershell.exe"
        }
      }
    },
    {
      "label": "build-linux",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "mkdir -p build && cd build && cmake .. && make"
      ],
      "group": "build",
      "problemMatcher": [],
      "options": {
        "shell": {
          "executable": "/bin/bash"
        }
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm",
      "args": [
        "-rf",
        "build"
      ],
      "group": "build",
      "problemMatcher": []
    }
  ]
}