{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-windows",
      "type": "shell",
      "command": "New-Item -ItemType Directory -Force -Path build; Set-Location build; cmake .. -G \\\"MinGW Makefiles\\\"; make",
      "group": "build",
      "problemMatcher": [],
      "options": {
        "shell": {
          "executable": "powershell.exe",
          "args": ["-Command"]
        }
      }
    },
    {
      "label": "build-linux",
      "type": "shell",
      "command": "mkdir -p build && cd build && cmake .. && make",
      "group": "build",
      "problemMatcher": [],
      "options": {
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c"]
        }
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "build"],
      "group": "build",
      "problemMatcher": []
    }
  ]
}
