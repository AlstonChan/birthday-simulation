{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++: Launch (Windows)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Birthday_Simulation.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build-windows"
    },
    {
      "name": "C/C++: Launch (Linux)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Birthday_Simulation",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set scheduler locking off",
          "text": "-gdb-set scheduler-locking off",
          "ignoreFailures": true
        },
        {
          "description": "Catch SIGSEGV",
          "text": "catch signal SIGSEGV",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build-linux"
    },
    {
      "name": "C/C++: Launch (Linux) with AddressSanitizer",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Birthday_Simulation",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "ASAN_OPTIONS",
          "value": "abort_on_error=1:fast_unwind_on_malloc=0:detect_leaks=1:log_path=${workspaceFolder}/debug/asan-log"
        }
      ],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set scheduler locking off",
          "text": "-gdb-set scheduler-locking off",
          "ignoreFailures": true
        },
        {
          "description": "Catch SIGSEGV",
          "text": "catch signal SIGSEGV",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build-linux-asan"
    },
    {
      "name": "Run with Valgrind (Output Only)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Birthday_Simulation",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "PATH",
          "value": "${env:PATH}"
        }
      ],
      "externalConsole": true,
      "preLaunchTask": "run-valgrind-task"
    }
  ]
}